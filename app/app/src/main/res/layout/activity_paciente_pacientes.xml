<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_home_pacientes">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/remi_logo_bien"
                android:contentDescription="Logo de Remi"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Remi"
                android:textSize="32sp" />

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/profile"
                android:contentDescription="Icono de perfil" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Jueves, 20 de Noviembre de 2025"
            android:textSize="15sp"
            android:layout_gravity="start"
            android:layout_marginTop="9dp"
            android:textColor="#000000"
            android:layout_marginStart="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Medicación Programada"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="#1E88E5"
                android:layout_marginStart="16dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayoutProgramada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Citas médicas"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="#5E72E4"
                android:layout_marginStart="16dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayoutCitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Medicación tomada"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="#81C784"
                android:layout_marginStart="16dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayoutTomada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Medicación No Tomada"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="#E57373"
                android:layout_marginStart="16dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayoutNoTomada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>