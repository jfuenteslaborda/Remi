<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".Login.Login">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/remi_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="@string/remiName" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="@string/remiLoginDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/rounded_border">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="25dp"
                android:textSize="15dp"
                android:fontFamily="serif"
                android:text="Nombre" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/rounded_form"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Introduce tu Usuario"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_email_scaled"
                    android:drawablePadding="10dp"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textSize="15dp"
                android:fontFamily="serif"
                android:text="Contraseña" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/rounded_form"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Introduce tu contraseña"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_password_scaled"
                    android:drawablePadding="10dp"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/log_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:padding="17dp"
                android:textSize="19dp"
                android:backgroundTint="#1E88E5"
                android:fontFamily="serif"
                android:text="Iniciar Sesión" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#BFBFBF"
                android:text="━━━━━━━━━  ¿Eres nuevo?  ━━━━━━━━━" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/solicitar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="13dp"
                android:padding="17dp"
                android:textSize="19sp"
                android:textColor="#43A047"
                android:fontFamily="serif"
                android:text="Solicitar cuenta"
                android:backgroundTint="@android:color/white"
                app:strokeColor="@color/verde"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#464646"
            android:gravity="center"
            android:fontFamily="serif"
            android:textSize="10sp"
            android:text="By continuing, you agree to our Terms of Service and Privacy Policy"
            android:layout_marginBottom="40dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
