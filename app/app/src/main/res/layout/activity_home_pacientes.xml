<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity_home_pacientes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/remi_logo_bien"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Remi"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/profile" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:fontFamily="serif"
        android:text="Pastillas a tomar hoy"
        android:textSize="15sp"
        android:layout_gravity="left"
        android:layout_marginTop="9dp"
        android:textColor="#737373"
        android:layout_marginStart="27dp"
         />

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"

        android:background="@drawable/rounded_shadow"
        android:padding="16dp"

        android:elevation="20dp"

        android:translationY="10dp"

        android:outlineSpotShadowColor="#12000000"
        android:outlineAmbientShadowColor="#12000000"

        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:text="Ibuprofeno"
            android:textSize="17sp"
            android:fontFamily="serif"
            />


    </LinearLayout>

</LinearLayout>
